@model ProjectsModel
@{

    ViewData["title"] = "Delete Project";
}


<div class="container">
    <div class="text-center">
        <h1 class="display-4">Delete Project</h1>

    </div>
    <form method="post" asp-controller="Projects" asp-action="DeleteProject">
        <input type="hidden" asp-for="Id" />
        <h2>Do you want to delete this project?</h2>
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="What is the name of the project?" disabled>
            <span class="text-danger" asp-validation-for="Name"> </span>
        </div>
        <div class="mb-3">
            <label for="Finished" class="form-label">Finished</label>
            <input type="text" class="form-control" asp-for="Finished" id="Finished" placeholder="Is the project finished?" disabled>
            <span class="text-danger" asp-validation-for="Finished"> </span>
        </div>
        <div class="mb-3">
            <label for="Link" class="form-label">Link</label>
            <input type="text" class="form-control" asp-for="Link" id="Link" placeholder="What is the access link to the project?" disabled>
            <span class="text-danger" asp-validation-for="Link"> </span>

            <div class="d-flex gap-2 mt-5">
                <button type="submit" class="btn btn-primary w-50">Delete</button>
                <a class="btn btn-primary w-50" asp-controller="Projects" asp-action="Index">Return</a>

            </div>
            <div style="height: 100px;"></div>
    </form>

</div>