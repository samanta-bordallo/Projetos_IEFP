@model IEnumerable<EmprestimosModel>


<div class=" container">  
    <div class="d-flex justify-content-between align-items-center"> 
        <h1 class="display-4">Listagem de Emprestimos de Jogos</h1>
        <a class="btn btn-success" asp-controller="Emprestimos" asp-action="NovoRegisto"><i class="bi bi-file-earmark-plus"></i> Novo Registo</a>
    </div>

<table id="Emprestimos" class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Nome do Jogo</th>
            <th scope="col">Data de atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model!=null)
        {
            @foreach(var emprestimo in Model)
            {
        

                <tr>
                    <th scope="row">@emprestimo.Id</th>
                    <td>@emprestimo.Recebedor</td>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.JogoEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualizacao</td>
                    <td>
                            <a asp-controller="Emprestimos" asp-action="EditarRegisto" asp-route-id="@emprestimo.Id" class=" btn btn-warning mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Emprestimos" asp-action="EliminarRegisto" asp-route-id="@emprestimo.Id" class=" btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Eliminar</a>
                    </td>
        </tr>
            }
        }
    </tbody>







</table>

</div>